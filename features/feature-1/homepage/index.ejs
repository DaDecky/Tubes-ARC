      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      header {
        background-color: #333;
        color: #fff;
        padding: 10px 0;
        position: sticky;
        top: 0;
        width: 100%;
        z-index: 1000; /* Ensures the header stays above other content */
        display: flex;
      }

      header > * {
