      .top-categories{
        padding-left: 2rem;
        padding-right: 2rem;
      }

      .top-categories h2{
        text-align: center;
        padding-bottom: 1rem;
      }

      .slider-wrapper{
        position: relative;
        margin: auto;
        max-width:40rem;
        border-style:solid;
        border-radius: 10px;
      }

      .slider{
        display: flex;
        overflow-x: hidden;
        overflow-y: hidden;
        aspect-ratio: 16/9;
        scroll-snap-type: x mandatory;
        scroll-behavior: smooth;
        border-radius: 10px;
        
      }

      .slider div{
        position: relative;
        flex: 1 0 100%;
        scroll-snap-align: start;
      }

      .slider div::after{
        content:"";
        position: absolute;
        top:60%;
        left:0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 100%);
        z-index:1;
      }

      .slider div img{
          height: 100%;
          width: 100%;
          object-fit: cover;
      }

      .slider div a{
        position:absolute;
        bottom:3rem;
        right:3rem;
        text-align:right;
        color: white;
        z-index: 2;
        transition: all ease 250ms;
        size:20px;
      }

      .slider div a:hover{
        transform: scale(1.2);
      }


      .slider-nav{
        display: flex;
        gap: 1rem;
        position:absolute;
        bottom: 1rem;
        left:50%;
        transform: translateX(-50%);
        z-index: 2;
      }

      .slider-nav a{
        width: 0.5rem;
        height: 0.5rem;
        border-radius: 50%;
        background-color: white;
        opacity: 0.75;
        transition: opacity ease 200ms;
        z-index:2;
      }

      .slider-nav a:hover{
        opacity: 1;
      }

      .content{
        padding-left: 2rem;
        display: flex;
        justify-content: left;
        gap:2.5rem;
        flex-wrap: wrap;
      }

      h2{
        margin-top:2rem;
        margin-left:2rem; 
        text-align: center;
      }

      .card{
        display: block;
        text-decoration: none;
        color: black;
        width:30%;
        transition: box-shadow .3s;
      }

      .card:hover{
        box-shadow: 0 0 1rem rgba(33, 33, 33, 0.2);
      }

      .article {
        border: black 2px outset;
        padding: 2rem 2rem 2rem 2rem;
      }

      .article h3{
        font-size: 1.75rem;
      }

      .article img{
        width: 100%;
        aspect-ratio: 16/9;
        object-fit: cover;
      }

      #more{
        text-decoration: none;
        display: inline-block;
        position: absolute;
        right: 6rem;
        padding: 0.5rem 0.5rem 0.5rem 0.5rem;
        border: 2px rgba(0,0,0,0.2) outset;
      }

      #add-button {
